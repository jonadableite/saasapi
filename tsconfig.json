{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"lib": ["es2018", "dom"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["./node_modules/@types", "./src/@types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
